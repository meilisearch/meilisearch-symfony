# https://editorconfig.org/

root = true

[*]
trim_trailing_whitespace = true
insert_final_newline     = true
end_of_line              = lf
charset                  = utf-8
indent_style             = space
indent_size              = 4
max_line_length          = 120

[*.{yml,yaml}]
indent_size              = 4

[*.json]
indent_size              = 2

[*.{neon,neon.dist}]
indent_style = tab
